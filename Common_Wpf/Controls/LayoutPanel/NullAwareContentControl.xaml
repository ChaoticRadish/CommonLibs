<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:util="clr-namespace:Common_Wpf.Utility"
    mc:Ignorable="d"
    xmlns:local_LayoutPanel="clr-namespace:Common_Wpf.Controls.LayoutPanel">

    <Style TargetType="{x:Type local_LayoutPanel:NullAwareContentControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local_LayoutPanel:NullAwareContentControl}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <!-- 
                            给 ContentControl 起个名字，以便 Trigger 可以引用它
                        -->
                        <ContentPresenter x:Name="PART_ContentPresenter" Margin="{TemplateBinding Padding}"/>
                    </Border>

                    <!-- 核心：使用 Trigger 来控制模板 -->
                    <ControlTemplate.Triggers>
                        <!-- 当 Content 属性为 null 时触发 -->
                        <Trigger Property="DataContext" Value="{x:Null}">
                            <Setter TargetName="PART_ContentPresenter" 
                                    Property="ContentTemplate" 
                                    Value="{Binding NullTemplate, RelativeSource={RelativeSource TemplatedParent}}">
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>