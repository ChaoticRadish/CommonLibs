<Page x:Class="CommonLibTest_Wpf.TestPages.Ui.Layouts.NullAware001"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CommonLibTest_Wpf.TestPages.Ui.Layouts"
      xmlns:commonLayouts="clr-namespace:Common_Wpf.Controls.LayoutPanel;assembly=Common_Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance local:NullAware001}"
      Title="NullAware001">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button Click="Button_Click">测试按钮</Button>
            <Label>当前文本: </Label>
            <Label Content="{Binding MyData}"></Label>
        </StackPanel>
        <commonLayouts:NullAwareContentControl Grid.Column="1" DataContext="{Binding MyData}" d:DataContext="123456" Padding="1" BorderBrush="Red" BorderThickness="1">
            <Border BorderThickness="1" BorderBrush="Blue">
                <StackPanel>
                    <Label>!!! </Label>
                    <Label Content="{Binding}"></Label>
                    <Label> !!!</Label>
                </StackPanel>
            </Border>
            <commonLayouts:NullAwareContentControl.NullTemplate>
                <DataTemplate>
                    <Label>没有数据</Label>
                </DataTemplate>
            </commonLayouts:NullAwareContentControl.NullTemplate>
        </commonLayouts:NullAwareContentControl>
    </Grid>
</Page>
