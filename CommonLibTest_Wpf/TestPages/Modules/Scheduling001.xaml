<Page x:Class="CommonLibTest_Wpf.TestPages.Modules.Scheduling001"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CommonLibTest_Wpf.TestPages.Modules"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Name="main"
      Title="Scheduling001" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
            <Button Click="Button_Click">调度! </Button>
        </StackPanel>
        <ListBox Grid.Column="0" Grid.Row="1"  
                 DataContext="{Binding ElementName=main}" 
                 ItemsSource="{Binding Infos}" 
                 d:ItemsSource="{d:SampleData ItemCount=8}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding}" BorderThickness="1" BorderBrush="Red"></Label>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
